<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/library_bottom_audiobook_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/library_bottom_audiobook_player_clickable_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/library_bottom_play_button"
        app:layout_constraintBottom_toTopOf="@id/library_item_progressbar">

        <ImageView
            android:id="@+id/library_bottom_cover_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:maxHeight="30dp"
            android:background="@color/darker_grey"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_album"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/library_bottom_chapter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/library_bottom_cover_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/library_bottom_book_name"
            app:layout_constraintStart_toEndOf="@id/library_bottom_cover_image"
            app:layout_constraintTop_toBottomOf="@id/library_bottom_chapter_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/library_bottom_duration"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/library_bottom_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/library_bottom_chapter_name"
            app:layout_constraintStart_toEndOf="@id/library_bottom_book_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="TextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/library_item_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/library_bottom_play_button"/>

    <ImageButton
        android:id="@+id/library_bottom_play_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/library_bottom_audiobook_player_clickable_area"
        app:layout_constraintBottom_toTopOf="@id/library_item_progressbar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/library_bottom_audiobook_player_clickable_area"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_circle_filled_black_24dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>