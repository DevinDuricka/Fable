<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>

    <!-- TODO Add the swipe to refresh -->
<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/swipe_refresh_layout_library">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_library"
            style="@style/Widget.MaterialComponents.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIconTint="@color/tab_selector"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabTextColor="@color/tab_selector">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_library_in_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="In Progress" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_library_not_started"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Not Started" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_item_library_finished"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Finished" />


        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </androidx.viewpager2.widget.ViewPager2>

        <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/library_exoplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:controller_layout_id="@layout/library_fragment_player"/>


    </LinearLayout>


<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

</layout>